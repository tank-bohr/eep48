{erl_opts, [debug_info]}.

{plugins, [
    {rebar3_elixir_compile,
        {git, "https://github.com/barrel-db/rebar3_elixir_compile.git", {branch, "master"}}}
]}.

{shell, [
    {config, "config/app.config"}
]}.

{deps, [
    {edown, "0.8.1"},
    {hackney, "1.14.3"},
    {earmark, {elixir, "earmark", "1.3.0"}},
    {ex_doc, {elixir, "ex_doc" ,"0.19.1"}}
]}.

{provider_hooks, [
    {pre, [{compile, {ex, compile}}]}
]}.

{elixir_opts, [
    {env, dev}
]}.
